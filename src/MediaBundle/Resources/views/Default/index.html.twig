

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Albums list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Titrealbum</th>
            <th>Artiste</th>
            <th>Genre</th>
            <th>Support</th>
        </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td><a href="{{ path('album_show', { 'id': album.id }) }}">{{ album.id }}</a></td>
                <td>{{ album.titreAlbum }}</td>
                <td>{{ album.artiste }}</td>
                <td>{{ album.genre }}</td>
                <td>{{ album.support }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('album_index') }}">Back to the list</a>
{% endblock %}
